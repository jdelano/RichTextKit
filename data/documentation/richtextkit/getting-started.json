":"symbol","title":"RichTextView","fragments":[{"kind":"keyword","text":"class"},{"kind":"text","text":" "},{"kind":"identifier","text":"RichTextView"}],"abstract":[{"type":"text","text":"This view inhertits and extends "},{"type":"codeVoice","code":"NSTextField"},{"type":"text","text":" in AppKit and"},{"type":"text","text":" "},{"type":"codeVoice","code":"UITextField"},{"type":"text","text":" in UIKit."}],"identifier":"doc:\/\/RichTextKit\/documentation\/RichTextKit\/RichTextView","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"RichTextView"}],"url":"\/documentation\/richtextkit\/richtextview"},"doc://RichTextKit/documentation/RichTextKit/RichTextCoordinator":{"role":"symbol","title":"RichTextCoordinator","fragments":[{"kind":"keyword","text":"class"},{"kind":"text","text":" "},{"kind":"identifier","text":"RichTextCoordinator"}],"abstract":[{"type":"text","text":"This coordinator is used to keep a "},{"type":"reference","isActive":true,"identifier":"doc:\/\/RichTextKit\/documentation\/RichTextKit\/RichTextView"},{"type":"text","text":" in sync"},{"type":"text","text":" "},{"type":"text","text":"with a "},{"type":"reference","isActive":true,"identifier":"doc:\/\/RichTextKit\/documentation\/RichTextKit\/RichTextContext"},{"type":"text","text":"."}],"identifier":"doc:\/\/RichTextKit\/documentation\/RichTextKit\/RichTextCoordinator","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"RichTextCoordinator"}],"url":"\/documentation\/richtextkit\/richtextcoordinator"},"doc://RichTextKit/documentation/RichTextKit":{"role":"collection","title":"RichTextKit","abstract":[{"type":"text","text":"RichTextKit is a Swift-based library that lets you work with rich text in UIKit, AppKit and SwiftUI."}],"identifier":"doc:\/\/RichTextKit\/documentation\/RichTextKit","kind":"symbol","type":"topic","url":"\/documentation\/richtextkit"},"doc://RichTextKit/documentation/RichTextKit/RichTextContext/fontSize":{"role":"symbol","title":"